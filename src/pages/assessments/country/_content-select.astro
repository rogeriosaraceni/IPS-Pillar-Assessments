<div class="card">
    <div class="card-body">
        <div class="card-title">
            <span>Select</span>
        </div>

        <form action="">
            <section class="row">
                <label class="col-xxl-2 col-xl-3 col-lg-6 col-md-6 col-sm-6">Country:
                    <select id="" name="" class="form-select" required>
                        <option></option>
                        <option value="1" selected>Brazil</option>
                        <option value="2">Colombia</option>
                        <option value="3">Mexico</option>
                        <option value="4">Peru</option>
                    </select>
                </label>

                <label class="col-xxl-2 col-xl-3 col-lg-6 col-md-6 col-sm-6">Month:
                    <select id="mes" name="mes" class="form-select" required>
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3" selected="selected">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                </label>

                <div class="col-xxl-1 col-xl-2 col-lg-12 col-md-12 col-sm-12">
                    <div class="label-clearfix last-xl"></div>
                    <button type="submit" class="btn btn-primary btn-last-xl">View</button>
                </div>
            </section>
        </form>
    </div>
</div>
